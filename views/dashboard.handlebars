{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    <ol class="post-list">
      {{#each posts as |post|}}
      <li class="post">
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </li>
    {{/each}}
    </ol>

</section>
{{else}}
<h3> You have not created any posts yet!</h3>
{{/if}}
<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>

<script src="/js/add-post.js"></script>
<script src="/js/edit-post.js"></script>